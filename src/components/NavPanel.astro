---
import NavLink from '@components/NavLink.astro';
---

<nav id="nav-panel" data-visible="false">
  <ul id="nav-list">
    <NavLink text="Home" href="/" />
    <NavLink text="Blog" href="/blog" />
    <NavLink text="Resources" href="/resources" />
    <NavLink text="Highlights" href="/highlights" />
  </ul>
</nav>
<button aria-controls="nav-list" aria-expanded="false" id="nav-toggle-button"></button>

<style>
  #nav-panel {
    background: var(--color-bg-secondary);
    inset: 0 0 0 78%;
    padding: min(20vh, 4rem) 2rem;
    position: fixed;
    transform: translateX(100%);
    transition: transform 275ms ease-out;
    z-index: 100;
  }

  #nav-panel[data-visible='true'] {
    transform: translateX(0%);
  }

  #nav-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  #nav-toggle-button {
    border: 0;
    display: block;
    position: absolute;
    z-index: 999;
    width: 2.25rem;
    background-color: var(--color-bg-default);
    background-image: url('/icons/nav-open.svg');
    aspect-ratio: 1;
    top: 2rem;
    right: 1.25rem;
  }

  #nav-toggle-button[aria-expanded='true'] {
    background-color: var(--color-bg-secondary);
    background-image: url('/icons/nav-closed.svg');
  }

  @media (max-width: 1024px) {
    #nav-panel {
      inset: 0;
    }

    #nav-toggle-button {
      top: 1.15rem;
      right: 0.65rem;
    }
  }
</style>

<script>
  const expandNavPanel = () => {
    const navPanel = document.getElementById('nav-panel');
    const navToggle = document.getElementById('nav-toggle-button');

    navToggle?.addEventListener('click', () => {
      const isNavExpanded = navPanel?.getAttribute('data-visible');

      if (isNavExpanded === 'false') {
        navPanel?.setAttribute('data-visible', 'true');
        navToggle?.setAttribute('aria-expanded', 'true');
      } else {
        navPanel?.setAttribute('data-visible', 'false');
        navToggle?.setAttribute('aria-expanded', 'false');
      }
    });
  };

  expandNavPanel();
</script>
